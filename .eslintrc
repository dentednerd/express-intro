{
  "parserOptions": {
    "ecmaVersion": 6
  },
  "env": {
    "node": true,
    "jest": true,
    "es6": true
  },
  "extends": ["eslint:recommended"],
  "rules": {
    "space-before-blocks": 2,
    "arrow-spacing": 2,
    "keyword-spacing": 2,
    "space-infix-ops": 2,
    "space-in-parens": 2,
    "spaced-comment": 2,
    "semi": 2,
    "quotes": [2, "single"],
    "no-multiple-empty-lines": 2,
    "max-statements": [2, 15],
    "max-depth": [2, 2],
    "complexity": [2, 5],
    "max-len" :[2, 80]
  }
}